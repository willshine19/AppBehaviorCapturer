<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="66dip" >

    <!-- 后面板 三个按钮 -->

    <LinearLayout
        android:id="@+id/back"
        style="@style/ListBackContent"
        android:layout_width="wrap_content"
        android:layout_height="66dip"
        android:tag="back" >

        <Button
            android:id="@+id/example_row_b_action_1"
            style="@style/ListButtonAction"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="@string/open" />

        <Button
            android:id="@+id/example_row_b_action_2"
            style="@style/ListButtonAction"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="@string/googlePlay" />

        <Button
            android:id="@+id/example_row_b_action_3"
            style="@style/ListButtonAction"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="@string/uninstall" />

        <Button
            android:id="@+id/example_row_b_action_4"
            style="@style/ListButtonAction"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="@string/strace" />

        <Button
            android:id="@+id/example_row_b_action_5"
            style="@style/ListButtonAction"
            android:layout_width="wrap_content"
            android:layout_height="40dip"
            android:text="@string/pack" />
    </LinearLayout>
    <!-- 前面板 app信息 -->

    <RelativeLayout
        android:id="@+id/front"
        style="@style/ListFrontContent"
        android:orientation="vertical"
        android:layout_height="66dip" 
        android:tag="front" >

        <ImageView
            android:id="@+id/example_row_iv_image"
            style="@style/ListImage"
            android:layout_width="65dip"
            android:layout_height="66dip" />

        <TextView
            android:id="@+id/sText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

        <TextView
            android:id="@+id/example_row_tv_title"
            style="@style/ListTitle"
            android:textSize="19dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/sText"
            android:layout_toRightOf="@id/example_row_iv_image" />
    </RelativeLayout>

</FrameLayout>