<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/api_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:text="@string/hello_world" />


    <Button
        android:id="@+id/api_ra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/api_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="随机调用" />

    <Button
        android:id="@+id/call_sys_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/api_ra"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="调用系统api" />

    <Button
        android:id="@+id/call_prph_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_sys_api"
        android:layout_centerHorizontal="true"        
        android:layout_marginTop="10dp"
        android:text="调用外设api" />
   
    <Button
        android:id="@+id/call_data_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_prph_api"
        android:layout_centerHorizontal="true"        
        android:layout_marginTop="10dp"
        android:text="调用数据api" />
    

    <Button
        android:id="@+id/call_comm_api"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/call_data_api"
        android:layout_centerHorizontal="true"        
        android:layout_marginTop="10dp"
        android:text="调用通信api" />

</RelativeLayout>